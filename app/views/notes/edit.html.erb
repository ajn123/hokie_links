


<%= form_for(@note, url: { action: 'show' }) do |f| %>
  <%= render 'notes/edit_note', f: f %>

  <ol class="breadcrumb">
    <%= f.label 'Title:' %>
    <%= f.text_field :title %>
  </ol> <br>

  <%= f.text_area :description, class:"form-control input-lg form-group", rows: 30, placeholder: "Description" %>

  <%= render 'notes/edit_note', f: f %>
<% end %>