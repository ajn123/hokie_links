  <% if @course.posts.length >= 1 %>
    <% @course.posts.order('created_at DESC').each do |post| %>
      <div class="row wrap">
        <div class="col-sm-9 col-md-9">
          <div class="panel panel-default <%= cycle('panel-info', 'panel-success') %>">
            <div class="panel-heading ">
              <h3 class="panel-title "><%=post.title  %></h3>
            </div>
            <div class="panel-body">
              <div class="alert">
                <h4><%= post.description %></h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="row no-links">
      <div class="text-danger col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h1> No Comments yet. Come back later or share your own.</h1>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 col-sm-9 col-lg-9" id="comments">
      <h1>Post a comment<small> any advice or tips?</small></h1>

      <%= form_for(@post, class: 'form-group') do |f| %>

        <%= f.text_field :title , class:"form-control input-lg form-group", placeholder: "Title" %>

        <%= f.text_area :description, class:"form-control input-lg form-group",rows: 5, placeholder: "Description"  %>

        <%= f.hidden_field :course_id, value: @course.id %>

        <div class="form-group">
          <%= f.submit "Submit comment", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>