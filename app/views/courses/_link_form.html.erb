<div class="row">
  <div class="col-xs-12 col-sm-9 col-lg-9" id="links">
    <h1>Post a helpful link<small> share a good study resource or note</small></h1>

    <%= form_for(@link, url: { action: "create" }, class: 'form-group') do |f| %>

      <%= f.text_field :url ,class:"form-control input-lg form-group", placeholder: "Url" %>

      <%= f.text_field :name, class:"form-control input-lg form-group", placeholder: "Name"  %>

      <%= f.text_field :description, class:"form-control input-lg form-group", placeholder: "Description" %>

      <%= f.hidden_field :course_id, value: @course.id %>

      <div class="form-group">
        <%= f.submit "Submit link", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>